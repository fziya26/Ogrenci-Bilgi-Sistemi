@model MVCOGRENCİ.Models.EntityFramework.kulupler
@{
    ViewBag.Title = "KulupDetayGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kulüp Detayları</h2>
@using (Html.BeginForm("Guncelle", "Kulupler", FormMethod.Post))
{

    <div class="form-group" style="padding-top: 10px">
        @Html.LabelFor(m => m.kulup_adi, "Kulüp Adı")
        @Html.TextBoxFor(m => m.kulup_adi, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.kulup_kontenjan, "Kulüp Kontenjanı")
        @Html.TextBoxFor(m => m.kulup_kontenjan, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.kulup_id)
    <div style="padding-top: 10px;">
        <button class="btn btn-info"><i class="fas fa-edit"></i> Güncelle</button>
        <a href="/Kulupler/Index" class="btn btn-success position-relative"><i class="fas fa-undo"></i> Geri Dön</a>
    </div>
}
